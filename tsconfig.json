{
  "compilerOptions": {
    "target": "es2019",                          
    "lib": ["es2020"],
    "module": "commonjs",                     
    "outDir": "dist",                        
    "strict": true,                           
    "noImplicitAny": false,                 
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "exclude": [
    "**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
